extends layout

block content
    
  .w3-card-4
    header.w3-container.w3-teal
      h1
        span Livros Lista

    .w3-container   
      table.w3-table-all
        tr
          th id
          th title
          th author
          th publishDate
          th pages
          
        each livro in lLivros
          tr
            td
                a(href="/" + livro._id)= livro._id
            td= livro.title
            td
                a(href="/authors/"+ livro.author)=livro.author
            td= livro.publishDate
            td= livro.pages

